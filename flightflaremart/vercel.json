{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.7.1",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "php-8.2"
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "installCommand": "composer install --no-dev --optimize-autoloader && npm install",
  "buildCommand": "npm run build",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  }
}